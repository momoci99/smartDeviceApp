<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.notemel.deviceappalphav02">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.VIBRATE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/main_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DeviceSearchActivity"
            android:label="DeviceSearch"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SelectedDeviceInfoActivity"
            android:label="@string/DeviceInfo"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ServerConfigActivity"
            android:label="ServerConfig" />
        <activity
            android:name=".DetailDeviceInfo"
            android:label="DetailDeviceInfo"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".FullDeviceListActivity"
            android:label="DeviceLog"
        />
        <activity
            android:name=".ChartOptionSelectActivity"
            android:label="ChartOption" />
        <activity
            android:name=".ChartActivity"
            android:label="Chart" />
        <activity
            android:name=".AlertConfigActivity"
            android:label="AlertConfig" />
        <service
            android:name="service.AlarmService"
            android:enabled="true"></service>

    </application>

</manifest>